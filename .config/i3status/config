general {
        output_format = "i3bar"
        colors = true
        interval = 1
}
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"
disk "/" {
        format = "%avail"
}
load {
        format = "%1min"
}
memory {
        format = "%used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}
tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
